---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro';
import CarrotSoftwaresDevices from '../assets/carrotsoftwaresdevice.png';
---

<Layout title="Carrot Softwares">
	<Menu/>
	<main>
		<div id="slides">
			<img id="devicesimg" src={CarrotSoftwaresDevices.src} width="450" height="300">
			<h1>Bem-vindo ao nosso startup de softwares!</h1>
			<p class="instructions">
				Com o objetivo de ajudar o mundo todo, construímos os aplicativos de qualidade!
			</p>
		</div>
		<br>
		<div id="jointeam">
			<h1>Querem entrar no nosso startup?</h1>
			<p class="instructions">Entre nesse link para te convidamos para nosso startup! Estamos procurando ainda Web Designer, Edição de Vídeos e Design Gráfico!</p>
			<a href="https://forms.gle/T294G6DKDpN2hixG8">Participação no Startup de Carrot Softwares</a>
		</div>
	</main>
	<Footer/>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	#devicesimg {
		float: right;
		display: block;
		position: relative;
		max-width: calc(100% - 2rem);
		max-height: calc(4% - 1rem);
	}

	#jointeam {
		display: block;
		margin-top: 8em;
		text-align: center;
		background: rgb(255,190,0);
		background: -moz-linear-gradient(90deg, rgba(255,190,0,1) 0%, rgba(166,146,0,1) 51%, rgba(88,77,0,1) 100%);
		background: -webkit-linear-gradient(90deg, rgba(255,190,0,1) 0%, rgba(166,146,0,1) 51%, rgba(88,77,0,1) 100%);
		background: linear-gradient(90deg, rgba(255,190,0,1) 0%, rgba(166,146,0,1) 51%, rgba(88,77,0,1) 100%);
		filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#ffbe00",endColorstr="#584d00",GradientType=1); 
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: left;
		margin-bottom: 1em;
	}

	#jointeam h1 {
		text-align: center;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
